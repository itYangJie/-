<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- style="@style/bg_style" -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/top"
            	android:background="@drawable/top_tall"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:gravity="center_vertical" >
 <Button
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
           android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="2dp"
            android:background="@drawable/button_blue_short"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/back"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_title_size" />
             <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                   android:text="@string/check_localpic"
                    android:shadowDx="1.0" 
            		android:shadowDy="1.0" 
            		android:shadowRadius="1.0" 
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />
       

          
        </RelativeLayout>

        <!-- <ImageView -->
        <!-- android:id="@+id/line1" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="2.0dip" -->
        <!-- android:layout_below="@+id/top" -->
        <!-- android:src="@drawable/background_separate_vertical" /> -->

        <ListView
            android:id="@+id/localpic_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/background_white_corner"
            android:cacheColorHint="#00000000"
            android:listSelector="@drawable/listitem_bg_selector"
            android:padding="10dp" >
        </ListView>
    </LinearLayout>

    <!-- <TextView
        android:id="@+id/localpic_tv_nopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="@string/localpic_no"
        android:textColor="@color/color_white"
        android:textSize="24sp" /> -->

    <LinearLayout
        android:id="@+id/lintop"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_gravity="bottom"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:layout_below="@+id/top"
            android:src="@drawable/background_separate_vertical" />

        <TextView
            android:id="@+id/tv_camera_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:shadowColor="@color/color_shadow"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="@color/color_white"
            android:textSize="18.0sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>